{{#each blogs as |blog| }}
<div class='container p-3'>
    <div class='row border border-dark bg-light'>
        <div class='col bg-secondary text-white p-2' id='blog-title'><a href='/blog/{{blog.id}}' class='link-light'>{{blog.title}}</a></div>
        {{!-- <div class='col bg-secondary text-white p-2' id='blog-title'>{{blog.title}}</div> --}}
        <div class='col bg-secondary text-white p-2' id='username-date'>Posted by {{blog.user.username}} on {{format_date blog.date_created}}</div>
        <p class='bg-light p-3' id='blog-contents'>{{blog.contents}}</p>
    </div>
</div>
{{/each}}

