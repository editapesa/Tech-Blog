<div class='container p-3'>
    <div class='row border border-dark bg-light'>
        <div class='col bg-secondary text-white p-2' id='blog-title'>{{title}}</div>
        <div class='col bg-secondary text-white p-2' id='username-date'>Posted by {{user.name}} on {{format_date date_created}}</div>
        <p class='bg-light p-3' id='blog-contents'>{{contents}}</p>
    </div>
</div>

<div class='container p-3'>
    <div class='row border border-dark bg-light'>
        <div class='col bg-secondary p-4'></div>
        <div class='form-group p-3'>
            <label for='comment'>Comment:</label>
            <textarea class='form-control' rows='5' id='comment'></textarea>
        </div>
        <button type='button' class= 'btn btn-secondary btn-lg btn-block'>Submit</button>
    </div>
</div>

<script src='./js/postcomment.js'></script>