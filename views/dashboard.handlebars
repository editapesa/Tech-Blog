<div class='container p-3'>
    <div class='row border border-dark bg-light'>
        <div class='col bg-secondary p-4'>
        <h1>My Dashboard</h1>
        </div>
    </div>

{{#if blogs.length}}
{{#each blogs as |blog| }}
<div class='container p-3'>
    <div class='row border border-dark bg-light'>
        <div class='col bg-secondary text-white p-2' id='blog-title'><a href='/blog/{{blog.id}}'>{{blog.title}}</a></div>
        <div class='col bg-secondary text-white p-2' id='username-date'>Posted on {{format_date blog.date_created}}</div>
        <p class='bg-light p-3' id='blog-contents'>{{blog.contents}}</p>
    </div>
</div>
{{/each}}
{{/if}}

<div class='container p-3'>
    <div class='row border border-dark bg-light'>
        <button type='button' class= 'btn btn-secondary btn-lg btn-block'>+ New Post</button>
    </div>
</div>
